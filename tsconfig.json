{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@containers/*": ["app/containers/*"],
      "@ship/*": ["app/ship/*"],
      "@configs/*": ["configs/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}